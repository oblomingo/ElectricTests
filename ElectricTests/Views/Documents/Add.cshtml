@model ElectricTests.Model.UnformattedDocument

@{
	ViewBag.Title = "Add";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Dokumento įkelimas</h2>

@using (Html.BeginForm()) {
	@Html.ValidationSummary(true)

	<fieldset>
		<legend>Įkelimo forma</legend>

		<p>Dokumento pavadinimas</p>
		<div>
			@Html.EditorFor(model => model.Title)
			@Html.ValidationMessageFor(model => model.Title)
		</div>
		<p>Dokumento tekstas</p>
		<div>
			@Html.EditorFor(model => model.Text)
			@Html.ValidationMessageFor(model => model.Text)
		</div>
		<p>Ar dokumentas turi skyrius?</p>
		<div>
			@Html.EditorFor(model => model.WithSections)
			@Html.ValidationMessageFor(model => model.WithSections)
		</div>

		<p>
			<input type="submit" value="Įkelti dokumentą" class="button"/>
		</p>
	</fieldset>
}

<div>
	@Html.ActionLink("Back to List", "Index")
</div>
