@model ElectricTests.Model.Test

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Testo kūrimas</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Testo įvedimo forma</legend>
		<p>Testo pavadinimas</p>
        <div>
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>
        <p>Klausymų skaičius vienam kartui</p>
        <div>
            @Html.EditorFor(model => model.OneTestQuestionsNumber)
            @Html.ValidationMessageFor(model => model.OneTestQuestionsNumber)
        </div>

        <p>Ar matomas svetainės lankytojams?</p>
